<package>
  <description brief="OpenHRP">
    ROS package of the 3rd party package OpenHRP.
  </description>
  <author>Thomas Moulard</author>
  <license>EPL</license>
  <review status="experimental" notes=""/>
  <url>http://www.openrtp.jp/openhrp3/</url>

  <export>
    <cpp
       cflags="-I${prefix}/install/include"
       lflags="-L${prefix}/install/lib -Wl,-rpath,${prefix}/install/lib -lhrpCorbaStubSkel-3.1"
       />

    <rosdoc config="rosdoc.yaml" />
  </export>

  <depend package="openrtm" />
  <rosdep name="eigen" />
  <rosdep name="liblapack-dev" />
  <rosdep name="libjpeg" />
  <rosdep name="libpng12-dev" />
  <rosdep name="java" />
  <rosdep name="unzip" />
</package>
